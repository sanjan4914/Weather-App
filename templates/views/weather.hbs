<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto weather">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        {{!-- <input type="submit" value="search" id="submitBtn"> --}}
                        <input type="submit" value="🔍" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation ">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 oct</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="RealTempVal">0</span> <sup>o</sup>C</p>
                            {{!-- <p id="temp">0</p> --}}
                            <p id="temp_status"> <i class="fa-solid fa fa-cloud"></i> </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer -->
    {{>footer}}

    <script src="js/main.js"></script>

</body>

</html>